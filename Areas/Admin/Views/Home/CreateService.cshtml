@using Domain.Models
@model ServiceModel

@{
    ViewBag.Title = "Create Service";
}

<div class="container">
    <h2>Create a New Service</h2>


    <form asp-area = "Admin" asp-controller="Home" asp-action="CreateService" method="post">
        <div class="form-group">
            <input type="text" asp-for="@Model.Title"></input>
        </div>

        <div class="form-group">
            <input type="text" asp-for="@Model.Description"></input>
        </div>
        <div class="form-group">
            <input type="text" asp-for="@Model.CssClass"></input>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create Service</button>

        </div>
    </form>
</div>