@using Domain.Models
@model ServiceModel

@{
    ViewBag.Title = "Create Service";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .container {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Create a New Service</h2>

      
        <form asp-controller="Home" asp-action="CreateService" method="post">
            <div class="form-group">
                <input type= "text" asp-for="@Model.Title"></input>
            </div>

            <div class="form-group">
                <input type="text" asp-for="@Model.Description"></input>
            </div>
            <div class="form-group">
                <input type="text" asp-for="@Model.CssClass"></input>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Service</button>
             
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>